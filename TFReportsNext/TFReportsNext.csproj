<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <Version>2025.17</Version>
    <AssemblyName>TFReports</AssemblyName>
  </PropertyGroup>
<PropertyGroup>
  <!-- desired deployment filename -->
  <DesiredDeploymentFileName>TFReports.application</DesiredDeploymentFileName>
</PropertyGroup>

<Target Name="RenameClickOnceApplicationFile" AfterTargets="Publish">
  <ItemGroup>
    <!-- generated file produced by ClickOnce publish -->
    <_ProducedApp Include="$(PublishDir)$(AssemblyName).application" />
  </ItemGroup>

  <!-- rename only if the produced file exists -->
  <Move
    SourceFiles="@(_ProducedApp)"
    DestinationFiles="$(PublishDir)$(DesiredDeploymentFileName)"
    Condition="Exists('@(_ProducedApp)')" />
</Target>
  <ItemGroup>
    <Compile Remove="FormTFReportsNextOptions.cs" />
    <Compile Remove="FormTFReportsNextPrepareFrames.cs" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Remove="FormTFReportsNextPrepareFrames.resx" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ReportsNext\ReportsNext.csproj" />
    <ProjectReference Include="..\TFReportsSQLNext\TFReportsSQLNext.csproj" />
    <ProjectReference Include="..\TFSpreadSheetsNext\TFSpreadSheetsNext.csproj" />
  </ItemGroup>

</Project>